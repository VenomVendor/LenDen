<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vee="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <vee.HexWhale.LenDen.aUI.CustomFontTextView
        android:id="@+id/wt_pager_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wt_pager_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/wt_big_title"
        vee:veeTypeface="@string/font_myrid_pro" />

    <vee.HexWhale.LenDen.aUI.CustomFontTextView
        android:id="@+id/wt_pager_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/wt_big_text"
        vee:veeTypeface="@string/font_myrid_pro" />

</RelativeLayout>