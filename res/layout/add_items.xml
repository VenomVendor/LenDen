<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <include layout="@layout/bar_top_nav" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="3.5"
        tools:ignore="HardcodedText,ContentDescription" >

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#BBBBBB"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <vee.HexWhale.LenDen.aUI.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:baselineAlignBottom="true"
                    android:cropToPadding="true"
                    android:onClick="OpenImage"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camera" />

                <vee.HexWhale.LenDen.aUI.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="true"
                    android:baselineAlignBottom="true"
                    android:cropToPadding="true"
                    android:onClick="OpenImage"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camera" />

                <vee.HexWhale.LenDen.aUI.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="true"
                    android:baselineAlignBottom="true"
                    android:cropToPadding="true"
                    android:onClick="OpenImage"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camera" />

                <vee.HexWhale.LenDen.aUI.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="true"
                    android:baselineAlignBottom="true"
                    android:cropToPadding="true"
                    android:onClick="OpenImage"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camera" />

                <vee.HexWhale.LenDen.aUI.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="true"
                    android:baselineAlignBottom="true"
                    android:cropToPadding="true"
                    android:onClick="OpenImage"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camera" />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="#E1E1E1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="I am Interested in"
                    android:textColor="@color/black"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:weightSum="3" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#1DA988"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="Sales"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="SALES"
                        android:textColor="@color/white"
                        android:textSize="@dimen/add_item_tiny_menu" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#F09000"
                        android:clickable="true"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:onClick="Exchage"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="EXCHANGE"
                        android:textColor="@color/white"
                        android:textSize="@dimen/add_item_tiny_menu" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#A4A200"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="Both"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="BOTH"
                        android:textColor="@color/white"
                        android:textSize="@dimen/add_item_tiny_menu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3" >

                    <ImageView
                        android:id="@+id/add_items_arrow_s"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="0dp"
                        android:src="@drawable/s_arrow"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/add_items_arrow_e"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="0dp"
                        android:src="@drawable/e_arrow" />

                    <ImageView
                        android:id="@+id/add_items_arrow_b"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="0dp"
                        android:src="@drawable/b_arrow"
                        android:visibility="invisible" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#F5F5F5"
                    android:padding="10dp"
                    android:text="Title"
                    android:textColor="#9E9E9E" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="#F5F5F5"
                    android:drawableEnd="@drawable/arrow"
                    android:padding="10dp"
                    android:text="Category"
                    android:textColor="#9E9E9E" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="#F5F5F5"
                    android:drawableEnd="@drawable/arrow"
                    android:padding="10dp"
                    android:text="Sub Category"
                    android:textColor="#9E9E9E" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="#F5F5F5"
                    android:drawableEnd="@drawable/arrow"
                    android:padding="10dp"
                    android:text="Original Price"
                    android:textColor="#9E9E9E" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="#F5F5F5"
                    android:drawableEnd="@drawable/arrow"
                    android:padding="10dp"
                    android:text="Selling Price"
                    android:textColor="#9E9E9E" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="#F5F5F5"
                    android:drawableEnd="@drawable/arrow"
                    android:padding="10dp"
                    android:text="Location"
                    android:textColor="#9E9E9E" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="#F5F5F5"
                    android:minHeight="150dp"
                    android:padding="10dp"
                    android:text="Description"
                    android:textColor="#9E9E9E" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>