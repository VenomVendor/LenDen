<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1"
    android:orientation="vertical"
    tools:context=".Settings"
    tools:ignore="HardcodedText,ContentDescription,TextViewEdits,UselessParent" >

    <include layout="@layout/add_items_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:minHeight="48dp"
        android:padding="10dp"
        android:text="Notifications"
        android:textColor="#636363" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:minHeight="48dp"
                android:padding="10dp"
                android:text="Notification 1"
                android:textColor="#636363" />

            <ImageView
                android:id="@+id/notifications_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:minHeight="48dp"
                android:onClick="Noti"
                android:padding="10dp"
                android:scaleType="fitEnd"
                android:src="@drawable/notification_on"
                android:tag="on" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E1E1E1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:minHeight="48dp"
                android:padding="10dp"
                android:text="Notification 2"
                android:textColor="#636363" />

            <ImageView
                android:id="@+id/notifications_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:minHeight="48dp"
                android:onClick="Noti"
                android:padding="10dp"
                android:scaleType="fitEnd"
                android:src="@drawable/notification_on"
                android:tag="on" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E1E1E1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:minHeight="48dp"
                android:padding="10dp"
                android:text="Notification 3"
                android:textColor="#636363" />

            <ImageView
                android:id="@+id/notifications_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:minHeight="48dp"
                android:onClick="Noti"
                android:padding="10dp"
                android:scaleType="fitEnd"
                android:src="@drawable/notification_off"
                android:tag="off" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>