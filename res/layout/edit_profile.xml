<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1"
    android:orientation="vertical"
    tools:context=".EditProfile"
    tools:ignore="HardcodedText,ContentDescription" >

    <include layout="@layout/bar_top_nav" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="30dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:maxWidth="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/camera" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView1"
            android:src="@drawable/edit" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFF"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/name"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Name"
                android:textColor="#636363" />

            <TextView
                android:id="@+id/edit_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/label1"
                android:drawableRight="@drawable/arrow"
                android:gravity="right|center"
                android:padding="10dp"
                android:text="VenomVendor"
                android:textColor="@color/list_txt"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E1E1E1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/name"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Username"
                android:textColor="#636363" />

            <TextView
                android:id="@+id/edit_profile_uname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/label2"
                android:drawableRight="@drawable/arrow"
                android:gravity="right|center"
                android:padding="10dp"
                android:text="Venom_Vendor"
                android:textColor="@color/list_txt"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E1E1E1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/mail"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Email"
                android:textColor="#636363" />

            <TextView
                android:id="@+id/edit_profile_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/label3"
                android:drawableRight="@drawable/arrow"
                android:gravity="right|center"
                android:padding="10dp"
                android:singleLine="true"
                android:text="info@VenomVendor.com"
                android:textColor="@color/list_txt"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E1E1E1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/label4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Location"
                android:textColor="#636363" />

            <TextView
                android:id="@+id/edit_profile_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/label4"
                android:drawableRight="@drawable/arrow"
                android:gravity="right|center"
                android:padding="10dp"
                android:text="Bangalore"
                android:textColor="@color/list_txt"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>