<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vee="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_lyt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/menu_bg"
    android:minHeight="48dp"
    android:padding="5dp"
    tools:ignore="ContentDescription,HardcodedText" >

    <ImageView
        android:id="@+id/menu_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:onClick="FlipView"
        android:src="@drawable/rotate" />

    <vee.HexWhale.LenDen.aUI.CustomFontTextView
        android:id="@+id/menu_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="LenDen"
        android:textColor="@android:color/white"
        android:textSize="@dimen/menu_txt"
        vee:veeTypeface="@string/font_myrid_pro" />

    <ImageView
        android:id="@+id/menu_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:onClick="ToggleMenu"
        android:src="@drawable/menu" />

</RelativeLayout>